# Render Secret File (.env)
# Upload this file to Render → Service → Environment → Secret Files as filename: .env
# IMPORTANT: Replace the placeholder values below before uploading.
# Do NOT commit your real token to Git.

# --- REQUIRED ---
NOTION_TOKEN=ntn_replace_with_your_token

# Notion Database IDs (32 characters from DB URL before ?v=)
CHARACTER_DB_ID=26121d1b3ece80e39fc9e08c9d77e9da
CREATURES_DB_ID=26121d1b3ece805580e1fe3eefbc2bf9
REALMS_DB_ID=26121d1b3ece80c38e21fd8ea99a312b
MAGIC_DB_ID=26121d1b3ece80d8a060d768e1bd7740
PLOTS_DB_ID=26121d1b3ece80199a22d8ee25fc69a5

# --- SECURITY (recommended) ---
# Protect /publish-all and /pull-all; append ?secret=THIS_VALUE or header X-Sync-Secret
SYNC_SECRET=change_me_secret

# --- AUTOSYNC (recommended) ---
# Run pull/publish automatically; interval in minutes
AUTO_SYNC_INTERVAL_MINUTES=60

# On startup
AUTO_PULL_ON_START=true
AUTO_PUBLISH_ON_START=true

# Every interval
AUTO_PULL_EACH_CYCLE=true
AUTO_PUBLISH_EACH_CYCLE=true

# Auto-refactor large source JSONs into lore/<cat>/formatted on startup when empty
AUTO_REFACTOR_CREATURES_ON_START=true

